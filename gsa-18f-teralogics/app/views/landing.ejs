<% include ./common/page-header.ejs %>
<div class="hero-banner" style="position: fixed; width: 100%; height: calc(100% - 61px); z-index: 0;">
</div>
<div class="hero-banner valign-helper" style="background: none; position: relative; z-index: 1;">
	<div class="valign">
		<div style="border-radius: 0; color: #fff; white-space: normal;">
			<div class="panel-body">
				<object type="image/svg+xml" data="/img/logo-sm-light.svg" alt="Total Briecall"
						class="visible-xs hidden-sm"
						style="max-width: 100px; width: 100%; margin: 0 auto 8px auto;"></object>
				<object type="image/svg+xml" data="/img/logo-md-light.svg" alt="Total Briecall"
						class="visible-sm hidden-xs hidden-md"
						style="max-width: 200px; width: 100%; margin: 4px auto 16px auto;"></object>
				<object type="image/svg+xml" data="/img/logo-light.svg" alt="Total Briecall"
						class="visible-md visible-lg hidden-xs hidden-sm"
						style="max-width: 300px; width: 100%; margin: 28px auto 48px auto;"></object>
