.search-bar
	position relative

	input
		display block
		width 100%
		height 40px
		background none
		border none
		border-bottom 1px solid white
		color white
		font-size 1rem
		outline none

		@media screen and (min-width: 768px)
			font-size 1.75rem

	.loader
		display none

	&.loading
		.loader
			display block
			position absolute
			top 45px
			left 0			

