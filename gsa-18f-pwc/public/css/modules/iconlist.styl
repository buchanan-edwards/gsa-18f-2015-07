.icon-list
	inline-list()
	clearfix()
	margin 40px 0 0

	@media screen and (min-width: 768px)
		margin 60px 0 10px

	li
		text-align center
		col(1/3, uncycle:6, cycle:3)
		border-radius 100%

		@media screen and (min-width: 768px)
			col(1/6, uncycle:3, cycle:6)

		i
			display block
			text-align center
			font-size 2.3rem
			width 65px 
			height 65px
			border-radius 50%
			background white
			line-height 65px
			margin 0 auto 20px
			transition all .25s

			@media screen and (min-width: 768px)
				font-size 3.5rem
				width 100px 
				height 100px
				line-height 100px

		a
			display block
			text-align center
			color $blue
			transition color .25s			
			margin-bottom 20px
			padding 0 20px
			color white
			transition color .25s

			@media screen and (min-width: 768px)
				margin-bottom 40px

			i
				color $blue

			font-family 'Roboto', 'Open Sans', Helvetica, Arial, sans-serif

			@media screen and (min-width: 768px)
				margin-bottom 0

			&:hover, &:focus
				color $blue-header

				i
					background $blue-header
					color white
