.graph-filters
	background $light-grey
	padding 10px
	text-align center
	border-top 1px solid white
	margin-bottom 15px

	@media screen and (min-width: 768px)
		background none;

	li
		display inline-block
		margin 0 5px

		select
			border $gray
			padding 2px 4px
			border-radius 5px
			color $blue
