.inner
	padding 10px
	max-width 1200px
	margin 0 auto
	clearfix()
	position relative

header
	clearfix()

.conditions
	padding 20px 0 0
	text-align center
	background $blue

	h2
		color white

	@media screen and (min-width: 768px)
		padding 40px 0

.col2
	span(1/1, 0)

	@media screen and (min-width: 769px)
		span(1/2, 0)


		&.shift-right
			float right

		&.shift-left
			float left

.col3
	span(1/1, 0)
	margin-bottom 20px

	@media screen and (min-width: 768px)
		span(1/3, 0)
		margin-bottom 0